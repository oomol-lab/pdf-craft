{
    "[xml]": {
        "editor.wordWrap": "on"
    },
    "[xhtml]": {
        "editor.wordWrap": "on"
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports.ruff": "explicit",
            "source.fixAll.ruff": "explicit"
        },
        "files.trimTrailingWhitespace": true
    },
    "ruff.nativeServer": "on",
    "ruff.path": [
        "${workspaceFolder}/.venv/bin/ruff"
    ],
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUnnecessaryTypeIgnoreComment": "none"
    },
    "python.analysis.typeCheckingMode": "basic",
    "files.trimTrailingWhitespace": true,
    "cSpell.words": [
        "ahocorasick",
        "analysed",
        "analyser",
        "analysing",
        "clazz",
        "CUDA",
        "dets",
        "epub",
        "frombytes",
        "gundam",
        "LOCALAPPDATA",
        "markdownify",
        "MATHML",
        "mediabox",
        "metas",
        "ngram",
        "ngrams",
        "noembed",
        "noframes",
        "Nonspacing",
        "OOMOL",
        "pdfinfo",
        "pixmap",
        "poppler",
        "pyahocorasick",
        "pydantic",
        "pyenv",
        "pylatexenc",
        "pylint",
        "pypdf",
        "pytest",
        "REGX",
        "rowspan",
        "SSOHH'mm",
        "tagfilter",
        "tiktoken",
        "torchvision",
        "venv",
        "virtualenvs",
        "YYYYMMDDH",
        "Zeyu"
    ]
}
